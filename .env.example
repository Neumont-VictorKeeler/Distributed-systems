# Database Configuration
# For SQLite (default)
DATABASE_URL=sqlite:///./videogame_trading.db

# For PostgreSQL (uncomment and modify if using PostgreSQL)
# DATABASE_URL=postgresql://dbuser:dbpassword@db:5432/videogame_trading

# For MySQL (uncomment and modify if using MySQL)
# DATABASE_URL=mysql+pymysql://dbuser:dbpassword@db:3306/videogame_trading

# Database Connection Parameters (for external databases)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=videogame_trading
DB_USER=dbuser
DB_PASSWORD=dbpassword

# Application Security Configuration
SECRET_KEY=your-secret-key-change-this-in-production-min-32-characters-long
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# API Server Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=false

# Python Configuration
PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=1

# Node.js Configuration (if using Node.js)
NODE_ENV=production
PORT=3000

# .NET Configuration (if using .NET)
ASPNETCORE_ENVIRONMENT=Production
ASPNETCORE_URLS=http://+:5000

# Java/Tomcat Configuration (if using Java/Tomcat)
CATALINA_OPTS=-Xms512M -Xmx1024M
JAVA_OPTS=-Djava.security.egd=file:/dev/./urandom

# CORS Configuration (optional)
CORS_ORIGINS=*
CORS_CREDENTIALS=true
CORS_METHODS=*
CORS_HEADERS=*

# Logging Configuration (optional)
LOG_LEVEL=INFO
LOG_FORMAT=json

KAFKA_BOOTSTRAP_SERVERS=kafka:9092
KAFKA_TOPIC_NOTIFICATIONS=email-notifications

SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@videogametrading.com

